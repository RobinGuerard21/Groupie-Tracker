<script>
    var logo = document.querySelector(".logo");

    window.addEventListener("scroll",() => {
        console.log(window.pageYOffset);
        if(window.pageYOffset > 20 && logo.classList.contains("Beggin")) {
            logo.classList.remove("Beggin");
